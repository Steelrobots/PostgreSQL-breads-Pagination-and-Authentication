<%- include('../partials/header')%>

    <body>
        <div class="container">
            <div class="profil">
                <a href="users/upload" id="upload"><img src="<%= profil.avatar ? `..images/${profil.avatar}` : `../images/default_avatar.jpg`%>" width="70"></a>
                <h1><%= profil.email%></h1>
                <a href="/logout" id="logout"><i class="fa-solid fa-right-from-bracket" style="color: #ffffff;">&nbsp;</i>Sign
                    out</a>
            </div>
            <h1>PostgreSQL Breads(Browse,Read,Edit,Add,Delete,Sort)</h1>

            <form action="" method="get">
                <div class="inside">
                    <input type="hidden" name="page" value="1">
                    <div class="inline">
                        <label for="title" class="col-sm-2 col-form-label">Title</label>
                        <div class="contain-input"><input type="text" id="title" name="title"
                                placeholder="insert your title" value="<%= query.title%>">
                        </div>
                    </div>
                    <div class="rowbirth"><label for="birthdate">Birthdate</label>
                        <div class="birthdate">
                            <input type="date" id="strBirth" name="strBirth" value="<%= query.strBirth%>">
                            <p>s.d</p>
                            <input type="date" id="endBirth" name="endBirth" value="<%= query.endBirth%>">
                        </div>
                    </div>
                    <div class="rowcomplete"><label for="complete">Complete</label>

                        <%if(query.complete==false){ %>
                            <select name="complete" id="complete">
                                <option value="" disabled>-select complete-</option>
                                <option value="false" selected>Not Yet</option>
                                <option value="true">Done</option>
                            </select>
                            <%} else if(query.complete==true){%>
                                <select name="complete" id="complete">
                                    <option value="" disabled>-select complete-</option>
                                    <option value="false">Not Yet</option>
                                    <option value="true" selected>Done</option>
                                </select>
                                <%} else {%>
                                    <select name="complete" id="complete">
                                        <option value="" disabled selected>-select complete-</option>
                                        <option value="false">Not Yet</option>
                                        <option value="true">Done</option>
                                    </select>
                                    <%}%>

                    </div>
                    <div class="rowradio">
                        <legend>Operation</legend>
                        <% if(query.Operator=='OR' ) { %>
                            <div class="radio">
                                <div class="option">
                                    <input type="radio" id="OR" name="Operator" value="OR" checked />OR
                                </div>
                                <div class="option">
                                    <input type="radio" id="AND" name="Operator" value="AND" />AND
                                </div>
                            </div>
                            <% } else if(query.Operator=="AND" ) { %>
                                <div class="radio">
                                    <div class="option">
                                        <input type="radio" id="OR" name="Operator" value="OR" />OR
                                    </div>
                                    <div class="option">
                                        <input type="radio" id="AND" name="Operator" checked value="AND" />AND
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="radio">
                                        <div class="option">
                                            <input type="radio" id="OR" name="Operator" value="OR" checked required />OR
                                        </div>
                                        <div class="option">
                                            <input type="radio" id="AND" name="Operator" value="AND" />AND
                                        </div>
                                    </div>
                                    <% } %>
                    </div>
                    <div class="findcluster">
                        <button type="submit" class="search"><i class="fa-solid fa-magnifying-glass"></i></button>
                        <a href="/users" class="reset"><i class="fa-solid fa-rotate"></i></a>
                    </div>
                </div>
            </form>
            <div class="table">

                <table>
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Title</th>
                            <th>Complete</th>
                            <th>Deadline</th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody>
                        <%data.forEach((item,index)=>{ %>

                            <tr>
                                <td>
                                    <%= index +1 + offset%>
                                </td>
                                <td>
                                    <%= item.title %>
                                </td>
                                <td>
                                    <%= item.complete ? "Done" : "Not Yet" %>
                                </td>
                                <td>
                                    <%= moment(item.deadline).format("DD MMM YYYY HH:mm")%>
                                </td>
                                <td>
                                    <a href="/edit/<%= item.id%> " class="update"><i class="fa-solid fa-pencil"></i></a>&nbsp <button id="myBtn"
                                        class="delete"
                                        onclick="return confirmation('<%= item.title%>')"><i class="fa-solid fa-trash"></i></button>

                                </td>

                            </tr>


                            <% }) %>
                </table>

            </div>
            <div class="footer">
                <a href="/users/add"><i class="fa-solid fa-plus"></i></a>
            </div>
        </div>


        <%- include('../partials/footer')%>